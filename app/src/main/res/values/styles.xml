<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryOrange</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    /////TextView Style

    <style name="Widget.BaseAppTextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem" />

    <style name="AppTheme.AppTextView" parent="Widget.BaseAppTextView">
        <item name="android:textAlignment">center</item>
    </style>


    <style name="AppTheme.AppTextView.InterSemiBoldWhite20">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterRegular.14.Grey">
        <item name="android:textColor">@color/colorGrey</item>
    </style>


    <style name="AppTheme.AppTextView.Black">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterRegular">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterSemi16">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterSemi16.SettingItemTitle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterRegular.14">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="AppTheme.AppTextView.Black.InterBold">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterBold.28">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterBold.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterBold.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterBold.16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppTextView.Black.InterBold.grey14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>


    <style name="AppTheme.AppTextView.TextBlackInterMedium16">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppTextView.TextGreyInterMedium18">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppTextView.TextBlackInterMedium12">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppTextView.TextBlackInterMedium12.Board">
        <item name="android:drawablePadding">15dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="AppTheme.AppTextView.TextBlackInterMedium12.Destination">
        <item name="android:drawableStart">@drawable/ic_dots</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="AppTheme.AppTextView.InterMediumGrey12">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
    </style>




    <style name="AppTheme.AppTextView.InterMediumGrey12.Date">
        <item name="android:textColor">@color/colorEditTextHint</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="AppTheme.AppTextView.InterMediumGrey12.CheckboxAgree">
        <item name="android:button">@drawable/selector_agree</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="AppTheme.AppTextView.InterMediumGrey12.CheckboxAgree2">
        <item name="android:button">@drawable/selector_agree</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.AppTextView.TransportTextPoppins">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
    </style>


    ////////Button Style

    <style name="Widget.BaseAppButton" parent="Widget.MaterialComponents.Button" />

    <style name="AppTheme.AppButton" parent="Widget.BaseAppButton">
        <item name="android:background">@drawable/bg_button_corner</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">38dp</item>
        <item name="android:layout_marginEnd">38dp</item>
    </style>

    <style name="AppTheme.AppButton.OrangeBackground">
        <item name="backgroundTint">@color/colorPrimaryOrange</item>
    </style>

    <style name="AppTheme.AppButton.BlackBackground">
        <item name="backgroundTint">@color/colorBlack</item>
    </style>


    <style name="AppTheme.AppButton.CountryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorEditTextHint</item>
        <item name="strokeColor">@color/colorGrey</item>
        <item name="iconTint">@color/colorGrey</item>
    </style>


    ///EditTExt

    <style name="Widget.BaseAppEditText" parent="Widget.AppCompat.EditText" />

    <style name="AppTheme.AppEditText" parent="Widget.BaseAppEditText">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.EditTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TextAppearanceNav">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ImageHeader">
        <item name="android:foregroundTintMode">screen</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">#9F000000</item>
    </style>

    <style name="table_row_item" parent="@android:style/TextAppearance.Small">
        <item name="android:background">@drawable/table_border</item>
        <item name="android:padding">5dp</item>
        <item name="android:lines">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="table_row_item.AccountOpen">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ImageShare">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

</resources>
