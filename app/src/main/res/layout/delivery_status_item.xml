<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPOD"
        style="@style/AppTheme.AppTextView.InterMediumGrey12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_fpod"
        app:layout_constraintEnd_toEndOf="@id/textViewPODCity"
        app:layout_constraintStart_toStartOf="@id/textViewPODCity"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPODCity"
        style="@style/AppTheme.AppTextView.TextBlackInterMedium12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_orangeburg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPOD" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewPODDate"
        style="@style/AppTheme.AppTextView.InterMediumGrey12.Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_03_17_20"
        app:layout_constraintEnd_toEndOf="@id/textViewPODCity"
        app:layout_constraintStart_toStartOf="@id/textViewPODCity"
        app:layout_constraintTop_toBottomOf="@id/textViewPODCity" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plane"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@+id/textViewPODCity"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>