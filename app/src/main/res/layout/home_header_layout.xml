<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewHeader"
        style="@style/ImageHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/header_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewProfile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/colorWhite"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/colorWhite"
            android:scaleType="centerCrop"
            android:src="@drawable/header_image" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewEditProfile"
        android:src="@drawable/ic_header_edit"
        android:translationZ="15dp"
        app:layout_constraintBottom_toBottomOf="@id/cardViewProfile"
        app:layout_constraintEnd_toEndOf="@id/cardViewProfile"
        app:layout_constraintStart_toStartOf="@id/cardViewProfile"
        app:layout_constraintTop_toBottomOf="@id/cardViewProfile" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTheme.AppTextView.InterSemiBoldWhite20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/label_julia_robert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewProfile" />
</androidx.constraintlayout.widget.ConstraintLayout>