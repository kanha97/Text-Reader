<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNotificationTitle"
        style="@style/AppTheme.AppTextView.Black.InterSemi16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lorem Ipsum is simply dummy text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNotificationDescription"
        style="@style/AppTheme.AppTextView.Black.InterRegular.14.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNotificationTitle"
        tools:text="Lorem Ipsum is simply dummy text of the printing..." />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDate"
        style="@style/AppTheme.AppTextView.InterMediumGrey12"
        android:drawablePadding="5dp"
        android:layout_width="0dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableBottom="@drawable/divider_line"
        app:layout_constraintTop_toBottomOf="@id/textViewNotificationDescription"
        tools:text="25 Mar, 2020 - 3:00 pm" />
</androidx.constraintlayout.widget.ConstraintLayout>